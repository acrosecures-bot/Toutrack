<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This item is for when the button is SELECTED (checked) -->
    <item android:state_checked="true">
        <layer-list>
            <!-- This item is a drawable that we will position -->
            <item
                android:gravity="center"
                android:drawable="@drawable/nav_item_background_shape" />
        </layer-list>
    </item>

    <!-- This is the default, empty state for when the button is NOT selected -->
    <item android:drawable="@android:color/transparent" />

</selector>