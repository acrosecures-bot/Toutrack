<?xml version="1.0" encoding="utf-8"?>
<!--
    This is the main layout for the application. It uses a CoordinatorLayout
    to manage the BottomNavigationView floating over the main content area.
    The main content is a FrameLayout which contains all four pages.
    Only one page is visible at a time, controlled by the MainActivity.
-->

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- This FrameLayout holds all the pages. We show/hide them from Java/Kotlin code. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"> <!-- Margin to prevent content hiding behind nav bar -->

        <!-- ======================= HOME PAGE ======================= -->
        <ScrollView
            android:id="@+id/home_page_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true">
                        <TextView
                            android:id="@+id/greeting_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User name"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stay aware, stay safe."
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/safetyCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/safetyIcon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_shield_check"
                            android:contentDescription="Safety status icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/safetyTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/location_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="you are in safe zone"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#E0F2FE"
                    app:cardCornerRadius="16dp"
                    app:strokeColor="#BAE6FD"
                    app:strokeWidth="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/imgWeather"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_sun"
                            android:contentDescription="Weather icon"
                            app:tint="#0284C7"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:id="@+id/txtLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#0369A1"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28°C, Clear Skies. Sunset: 7:55 PM"
                                android:textColor="#075985"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="32dp"
                    android:paddingBottom="32dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In case of emergency"
                        android:textColor="@color/design_default_color_error"
                        android:textStyle="bold" />
                    <FrameLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="16dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sos_button"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="12dp"
                            app:cornerRadius="100dp"
                            android:backgroundTint="@android:color/holo_red_dark"
                            android:textColor="@color/white"
                            android:text="SOS\nPRESS &amp; HOLD"
                            android:textAlignment="center"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:textStyle="bold" />
                        <ProgressBar
                            android:id="@+id/sos_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:progressDrawable="@drawable/sos_circular_progress"
                            android:rotation="-90"
                            android:max="100"
                            android:progress="0"
                            android:indeterminate="false" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    <LinearLayout style="@style/QuickActionContainer">
                        <ImageView style="@style/QuickActionIcon" android:src="@drawable/ic_report" android:contentDescription="Report an incident"/>
                        <TextView style="@style/QuickActionLabel" android:text="Report" />
                    </LinearLayout>
                    <LinearLayout style="@style/QuickActionContainer"
                        android:id="@+id/btnShare">
                        <ImageView style="@style/QuickActionIcon" android:src="@drawable/ic_share" android:contentDescription="Share location"/>
                        <TextView style="@style/QuickActionLabel" android:text="Share" />
                    </LinearLayout>
                    <!-- <LinearLayout style="@style/QuickActionContainer">
                         <ImageView style="@style/QuickActionIcon" android:src="@drawable/ic_translate" android:contentDescription="Translate text"/>
                         <TextView style="@style/QuickActionLabel" android:text="Translate" />
                     </LinearLayout>-->
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- ======================= MAP PAGE ======================= -->
        <ScrollView
            android:id="@+id/map_page_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9FAFB"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Traveller Safety"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Live tracking &amp; alerts"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Unknown"
                        android:textColor="#232121"
                        app:chipBackgroundColor="@color/black"
                        app:chipStrokeWidth="0dp" />

                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:layout_marginTop="8dp">

                            <org.maplibre.android.maps.MapView
                                android:id="@+id/mapView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <!-- map design placeholders
                            <View
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:layout_gravity="center"
                                android:background="@drawable/map_outer_circle" />

                            <View
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_gravity="center"
                                android:background="@drawable/map_inner_circle_dashed"/>

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:background="@drawable/map_user_dot"/>
                            -->
                        </FrameLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Optional Card Removed by User -->
                <!--
                <com.google.android.material.card.MaterialCardView ... >
                ...
                </com.google.android.material.card.MaterialCardView>
              -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/start_trace"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="24dp"
                     android:text="Start tracking"
                    app:cornerRadius="12dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/alert_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:text="Send Alert"
                    app:cornerRadius="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Share location copy"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </ScrollView>

        <!-- ======================= MY ID PAGE ======================= -->
        <ScrollView
            android:id="@+id/id_page_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#F9FAFB"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My ID"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your official digital identity wallet."
                    android:textColor="@android:color/darker_gray" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_id_card"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/id_card_photo_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="User"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/idName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/r_nationality"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nationality:"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:text="Passport No: ••••••••1234"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For Secure Verification"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/qrCode"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="16dp"
                            android:background="#374151"
                            android:contentDescription="Scannable QR code"
                            android:padding="4dp"
                             />

                        <TextView
                            android:id="@+id/qr_timer_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Code refreshes in 23s..."
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Present this code to an official for secure verification."
                            android:textAlignment="center"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Recent Verification History"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/history_icon1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:contentDescription="Building icon"
                                android:src="@drawable/ic_buildings" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/history_icon1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hotel Taj Mahal Palace"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Checked In"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="16 Sep 2025, 6:18 PM"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/history_icon2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:contentDescription="Check mark icon"
                                android:src="@drawable/ic_check_circle" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@id/history_icon2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mumbai Police Checkpoint"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Identity Verified"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="16 Sep 2025, 4:05 PM"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- ======================= PROFILE PAGE ======================= -->
        <ScrollView
            android:id="@+id/profile_page_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#F9FAFB"
            android:paddingBottom="30dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- NEW HEADER with Title and Settings Icon -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Title and Subtitle centered -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:text="My Profile"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your safety information, all in one place."
                            android:textColor="@android:color/darker_gray"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <!-- Settings Button (Top Right Corner) -->
                    <ImageButton
                        android:id="@+id/settings_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Settings"
                        android:src="@drawable/setting_icon"
                        app:tint="@android:color/black"
                        android:padding="12dp"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/profile_photo_bg">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="User"
                                android:textColor="#8B5CF6"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:id="@+id/p_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Name"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                            <TextView
                                android:id="@+id/p_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="johndoe@example.com"
                                android:textColor="@android:color/darker_gray" />
                            <TextView
                                android:id="@+id/p_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+1 (555) 123-4567"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contacts"
                    android:layout_marginTop="24dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/contact_icon1"
                                style="@style/ContactIcon"
                                android:contentDescription="Contact icon"
                                android:src="@drawable/ic_user_circle" />
                            <LinearLayout
                                style="@style/ContactDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/contact_icon1">

                                <TextView
                                    android:id="@+id/p_primaryName"
                                    style="@style/ContactName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jane Doe" />
                                <TextView
                                    android:id="@+id/p_primaryPhone"
                                    style="@style/ContactRelation"
                                    android:text="Sister" />
                                <TextView
                                    android:id="@+id/p_primary"
                                    style="@style/ContactRelation"
                                    android:text="Sister" />
                            </LinearLayout>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="1dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/contact_icon2"
                                style="@style/ContactIcon"
                                android:contentDescription="Contact icon"
                                android:src="@drawable/ic_user_circle" />
                            <LinearLayout
                                style="@style/ContactDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/contact_icon2">
                                <TextView
                                    android:id="@+id/p_secondaryName"
                                    style="@style/ContactName"
                                    android:text="empty" />
                                <TextView
                                    android:id="@+id/p_secondaryPhone"
                                    style="@style/ContactRelation">

                                </TextView>
                                <TextView
                                    android:id="@+id/p_secondaryRelation"
                                    style="@style/ContactRelation"
                                    android:text="Friend" />
                            </LinearLayout>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medical Details"
                    android:layout_marginTop="24dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/p_bloodType"
                            style="@style/MedicalLabel"
                            android:text="Blood Type" />
                        <TextView
                            android:id="@+id/p_blood"
                            style="@style/MedicalValue"
                            android:text="O+" />
                        <View style="@style/Divider" />
                        <TextView
                            style="@style/MedicalLabel"
                            android:text="Allergies" />
                        <TextView
                            android:id="@+id/p_allergies"
                            style="@style/MedicalValue"
                            android:text="Penicillin, Peanuts" />
                        <View style="@style/Divider" />
                        <TextView
                            style="@style/MedicalLabel"
                            android:text="Medical Conditions" />
                        <TextView
                            android:id="@+id/p_conditions"
                            style="@style/MedicalValue"
                            android:text="Type 1 Diabetes" />
                        <View style="@style/Divider" />
                        <TextView
                            style="@style/MedicalLabel"
                            android:text="Medications" />
                        <TextView
                            android:id="@+id/p_medications"
                            style="@style/MedicalValue"
                            android:text="Insulin" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="This information is for emergency purposes only and will be kept private."
                    android:textColor="#F87171"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/btnLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    app:cornerRadius="8dp"
                    android:text="log out"
                    />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bottom_nav_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/bottom_nav_icon_tint"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>