<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_bg"
    android:padding="20dp"
    tools:context=".SettingsActivity">

    <!-- ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_actions_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/color_text_dark"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your safety information, all in one place."
                android:textSize="14sp"
                android:textColor="@color/color_text_light_grey" />

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_card_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/drawable_user_icon"
                            android:scaleType="centerCrop"
                            android:contentDescription="User icon" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/et_full_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Full name"
                                android:textColor="@color/color_text_dark"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:background="@android:color/transparent"
                                android:padding="0dp" />

                            <EditText
                                android:id="@+id/et_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Email address"
                                android:textColor="@color/color_text_light_grey"
                                android:textSize="14sp"
                                android:inputType="textEmailAddress"
                                android:background="@android:color/transparent"
                                android:padding="0dp" />

                            <EditText
                                android:id="@+id/et_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Phone number"
                                android:textColor="@color/color_text_light_grey"
                                android:textSize="14sp"
                                android:inputType="phone"
                                android:background="@android:color/transparent"
                                android:padding="0dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_save_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/color_primary_purple"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="Save"
                        android:textSize="14sp"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- User Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="2dp" />

            <!-- Emergency Contacts Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contacts"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/color_text_dark"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:paddingBottom="5dp"
                android:background="@drawable/selector_section_header" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_card_bg"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <!-- Primary Name & Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <EditText
                            android:id="@+id/et_primary_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/drawable_input_bg"
                            android:hint="Primary — Name"
                            android:padding="10dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_primary_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/drawable_input_bg"
                            android:hint="Primary — Phone"
                            android:inputType="phone"
                            android:padding="10dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Primary Relation -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primary — Relation"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <Spinner
                        android:id="@+id/sp_primary_relation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/relation_options"
                        android:background="@drawable/drawable_input_bg"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:spinnerMode="dropdown" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <!-- Secondary Name & Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <EditText
                            android:id="@+id/et_secondary_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/drawable_input_bg"
                            android:hint="Secondary — Name (Optional)"
                            android:padding="10dp"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_secondary_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/drawable_input_bg"
                            android:hint="Secondary — Phone (Optional)"
                            android:inputType="phone"
                            android:padding="10dp"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Secondary Relation -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secondary — Relation"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <Spinner
                        android:id="@+id/sp_secondary_relation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/relation_options"
                        android:background="@drawable/drawable_input_bg"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Location & Tracking -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location &amp; Tracking"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/color_text_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:paddingBottom="5dp"
                android:background="@drawable/selector_section_header" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_card_bg"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location sharing"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <Spinner
                        android:id="@+id/sp_location_sharing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/location_sharing_options"
                        android:background="@drawable/drawable_input_bg"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:padding="10dp"
                        android:spinnerMode="dropdown" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Real-time tracking"
                            android:textColor="@color/color_text_dark"
                            android:textSize="14sp" />

                        <Switch
                            android:id="@+id/sw_realtime_tracking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precision"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <Spinner
                        android:id="@+id/sp_precision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/precision_options"
                        android:background="@drawable/drawable_input_bg"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Medical Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/color_text_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:paddingBottom="5dp"
                android:background="@drawable/selector_section_header" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_card_bg"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <!-- Blood Type -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Type"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <EditText
                        android:id="@+id/et_blood_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. O+"
                        android:background="@drawable/drawable_input_bg"
                        android:padding="10dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <!-- Allergies -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allergies"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <EditText
                        android:id="@+id/et_allergies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. Penicillin, Peanuts"
                        android:background="@drawable/drawable_input_bg"
                        android:padding="10dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <!-- Medical Conditions -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical Conditions"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <EditText
                        android:id="@+id/et_medical_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. Type 1 Diabetes"
                        android:background="@drawable/drawable_input_bg"
                        android:padding="10dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <!-- Medications -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medications"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <EditText
                        android:id="@+id/et_medications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. Insulin"
                        android:background="@drawable/drawable_input_bg"
                        android:padding="10dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Privacy & Language -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy &amp; Language"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/color_text_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:paddingBottom="5dp"
                android:background="@drawable/selector_section_header" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_card_bg"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Consent: Location"
                            android:textColor="@color/color_text_dark"
                            android:textSize="14sp" />

                        <Switch
                            android:id="@+id/sw_consent_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Consent: KYC"
                            android:textColor="@color/color_text_dark"
                            android:textSize="14sp" />

                        <Switch
                            android:id="@+id/sw_consent_kyc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:textSize="14sp"
                        android:textColor="@color/color_text_light_grey" />

                    <Spinner
                        android:id="@+id/sp_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/language_options"
                        android:background="@drawable/drawable_input_bg"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/main_actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:background="@color/off_white_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_save_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="@color/color_primary_purple"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            android:elevation="4dp"
            android:layout_marginEnd="15dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/white"
            android:textColor="@color/color_text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
